@model Note

<a asp-action="Index" class="btn btn-primary">Back to Notes</a>
<h2>Note Details</h2>

<div>
<ul>
    <li><strong>Title:</strong> @Model.Title</li>
    <li><strong>Content:</strong> @Model.Content</li>
    <li><strong>Last Modified:</strong> @Model.UpdatedAt.ToString("g")</li>
</ul>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
    <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this note?');" />
</form>

